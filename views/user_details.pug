html
  head
  h5 User List
  script.
      function callFunction(id) {
       var result = confirm('Are you sure you want to delete this user?');
       if(result){
            fetch('/delete/'+id, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({ id: id })
            });
            //confirm(ctx.body); 
       }
      
      }
      
  body
    .table-responsive-sm
      table.table.table-hover
        thead
          tr    
            th First name
            th Second Name
            th E-mail
            th Updated At
            th.d-print-none
              a.btn.btn-sm.btn-success(href='/create') Add
        tbody
          each user in users
            tr
                td= user.first_name 
                td= user.last_name 
                td= user.email 
                td= user.updated_at
                td.d-print-none
                 a.btn.btn-sm.btn-warning(href='/edit/'+user.id) Edit
                 a.btn.btn-sm.btn-danger.editBtn(onclick='callFunction('+user.id+')') Delete
                 